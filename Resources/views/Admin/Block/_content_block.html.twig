{% trans_default_domain "PrestaCMSCoreBundle" %}

<div class="page-zone-block">
    <h4>{{ ['block.title.', block.type]|join|trans([], 'PrestaCMSCoreBundle') }}</h4>

    <div class="block-actions">
        {% if (block.isEditable and is_granted("ROLE_ADMIN_CMS_PAGE_EDIT")) %}
            <a block-id="{{ block.id }}" class="btn btn-tooltip action-edit"
               data-toggle="tooltip" title="{{ 'button.block.edit.tooltip'|trans }}">
                <i class="icon-edit"></i>
            </a>
        {% endif %}
        {% if (block.isDeletable and is_granted("ROLE_ADMIN_CMS_PAGE_STRUCTURE")) %}
            <a block-id="{{ block.id }}"
               block-title="{{ ['block.title.', block.type]|join|trans }}"
               class="btn  btn-tooltip action-delete"
               data-toggle="tooltip" title="{{ 'button.block.delete.tooltip'|trans }}">
                <i class="icon-trash"></i>
            </a>
        {% endif %}
    </div>
    <div id="block-content-{{ block.htmlId }}" class="block-content">
        {{ sonata_block_render(block) }}
    </div>
</div>

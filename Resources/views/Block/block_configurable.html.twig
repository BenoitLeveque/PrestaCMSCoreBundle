{% extends 'PrestaCMSCoreBundle:Block:base_block.html.twig' %}

{% block block %}
    {% if (block_preview is defined) %}
    <div class="block-preview">
        <img src="{{ asset(block_preview) }}" />
    </div>
    {% endif %}
    <table class="form_view">
    {% for key, setting in settings %}
        <tr>
            <th>{{ ['block.label.', key]|join|trans([], 'PrestaCMSCoreBundle') }}</th>
            <td>{{ setting|raw }}</td>
        </tr>
    {% endfor %}
    </table>
    {% if (settingsRoute is defined) %}
	    <div class="block-settings">
	        <a href="{{ url(settingsRoute)}}" target="_blank" class="module-settings">{{ 'block.module.settings.link'|trans([], 'PrestaCMSCoreBundle')}}</a>
	    </div>
    {% endif %}
{% endblock %}
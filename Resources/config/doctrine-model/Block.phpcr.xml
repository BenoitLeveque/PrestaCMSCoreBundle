<doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/phpcr-odm/phpcr-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/phpcr-odm/phpcr-mapping
    https://github.com/doctrine/phpcr-odm/raw/master/doctrine-phpcr-odm-mapping.xsd"
    >

    <mapped-superclass
        name="Presta\CMSCoreBundle\Model\Block"
        translator="attribute"
        referenceable="true"
        >
        <locale name="locale"/>

        <field name="type" type="string" nullable="false"/>
        <field name="editable" type="boolean" translated="true" nullable="false"/>
        <field name="deletable" type="boolean" translated="true" nullable="false"/>
        <field name="settings" type="string" assoc="" translated="true" nullable="false"/>

    </mapped-superclass>

</doctrine-mapping>
